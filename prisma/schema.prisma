generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user") // "user" | "admin"
  gender    String?  // "male" | "female" | "other"
  ageRange  String?  // "20s" | "30s" | "40s" | "50s" | "60+"
  job       String?  // 현재 직업
  industry  String?  // 업종/산업
  experience String? // 경력: "0-2" | "3-5" | "6-10" | "11-15" | "16-20" | "20+"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  careerAnchorResults CareerAnchorResult[]
  passwordResetTokens PasswordResetToken[]
}

model CareerAnchorResult {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  results   String   // JSON: { TF: 4.2, GM: 3.8, ... }
  topAnchor String   // e.g. "TF"
  aiReport  String?  // AI-generated report JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}
